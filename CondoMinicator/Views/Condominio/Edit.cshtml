@model CondoMinicator.Models.Condominio

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Condominio</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdministradoraID, "AdministradoraID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AdministradoraID", String.Empty)
                @Html.ValidationMessageFor(model => model.AdministradoraID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Usuario_TipoID, "Usuario_TipoID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Usuario_TipoID", String.Empty)
                @Html.ValidationMessageFor(model => model.Usuario_TipoID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
