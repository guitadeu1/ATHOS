@{
    ViewBag.Title = "Home Page";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>  

@if (ViewBag.Message != null)
{
    <div class="alert alert-error" style="background-color: mediumspringgreen; ">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @ViewBag.Message
    </div>
}

<div class="jumbotron">
    <h1>Controle de Comunicados Condominiais</h1>
