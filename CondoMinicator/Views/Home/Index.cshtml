    </div>
</div>

<script>
    $('.jumbotron').css('border-radius', '30px');

    $(".btn-default")
        .css('transition', 'all 0.3s ease-in')
        .hover(function () {
            $(this).css('transform', 'scale3d(1.4,1.4,5)');
        }, function () {
            $(this).css('transform', 'scale3d(1.0,1.0,5)');
        });

</script>